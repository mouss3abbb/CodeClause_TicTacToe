<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.codeclause_tictactoe.GameFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameFragment"
        android:background="@color/bg">

        <TextView
            android:id="@+id/scoreX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score X: "
            android:textSize="24sp"
            android:fontFamily="@font/eraser_dust"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/scoreO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="@font/eraser_dust"
            android:textStyle="bold"
            android:text="Score O: "
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/btn5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn6"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn4"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn3"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintBottom_toTopOf="@id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn1"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            app:layout_constraintBottom_toTopOf="@id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn9"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/btn7"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/eraser_dust"
            android:textSize="50sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset"
            android:layout_marginBottom="100dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="24sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>